{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "description": "Group UBI9 go-toolset Docker image",
      "matchDatasources": ["docker"],
      "matchPackageNames": ["registry.access.redhat.com/ubi9/go-toolset"],
      "versioning": "redhat",
      "groupName": "Go"
    },
    {
      "description": "Group Go version in GitHub Actions",
      "matchManagers": ["github-actions"],
      "matchDepNames": ["go"],
      "groupName": "Go"
    }
  ]
}
