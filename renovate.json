{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "description": "Enable Go version updates in go.mod",
      "matchDatasources": ["golang-version"],
      "rangeStrategy": "bump"
    },
    {
      "description": "Group Go language version from go.mod",
      "matchDatasources": ["golang-version"],
      "matchDepNames": ["go"],
      "groupName": "Go"
    },
    {
      "description": "Group golang Docker image",
      "matchDatasources": ["docker"],
      "matchPackageNames": ["golang"],
      "groupName": "Go"
    },
    {
      "description": "Group Go version in GitHub Actions",
      "matchManagers": ["github-actions"],
      "matchDepNames": ["go"],
      "groupName": "Go"
    }
  ]
}
